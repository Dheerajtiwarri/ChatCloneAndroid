<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:textColorSecondary">@color/app_primary_color</item>
        <item name="colorControlActivated">@color/app_primary_color</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:fontFamily">@font/public_sans_regular</item>
        <item name="colorControlHighlight">@color/app_primary_color</item>

    </style>


    <style name="MyToolBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionBarItemBackground">@color/app_primary_color</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="MainActionBar.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/app_primary_color</item>
    </style>

    <style name="AppEditText">
        <item name="android:fontFamily">@font/public_sans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppButton">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/public_sans_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
